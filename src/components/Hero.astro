<style>
  .hero-ultra {
    position: relative;
    background: var(--obsidian-black);
    overflow: hidden;
    min-height: 100vh;
  }
  
  /* Background Layers */
  .hero-bg-layer {
    position: absolute;
    inset: 0;
    z-index: 1;
  }
  
  .hero-bg-obsidian {
    background: radial-gradient(ellipse at center, rgba(26, 26, 35, 0.8) 0%, var(--obsidian-black) 70%);
  }
  
  .hero-bg-imperial {
    background: linear-gradient(135deg, 
      rgba(196, 30, 58, 0.1) 0%, 
      transparent 30%, 
      transparent 70%, 
      rgba(212, 175, 55, 0.08) 100%);
  }
  
  .hero-bg-holographic {
    background: 
      radial-gradient(circle at 20% 20%, rgba(212, 175, 55, 0.06) 0%, transparent 50%),
      radial-gradient(circle at 80% 80%, rgba(196, 30, 58, 0.04) 0%, transparent 50%),
      radial-gradient(circle at 50% 10%, rgba(0, 168, 107, 0.03) 0%, transparent 50%);
    animation: holographicShift 25s ease-in-out infinite;
  }
  
  /* Japanese Calligraphy */
  .japanese-calligraphy {
    position: absolute;
    inset: 0;
    z-index: 2;
    pointer-events: none;
  }
  
  .calligraphy-char {
    position: absolute;
    font-family: var(--font-japanese);
    font-size: clamp(80px, 15vw, 180px);
    font-weight: 100;
    color: rgba(212, 175, 55, 0.08);
    animation: levitate 8s ease-in-out infinite;
    user-select: none;
  }
  
  .char-1 { animation-delay: 0s; }
  .char-2 { animation-delay: 1s; }
  .char-3 { animation-delay: 2s; }
  .char-4 { animation-delay: 3s; }
  .char-5 { animation-delay: 4s; }
  .char-6 { animation-delay: 5s; }
  
  /* Sakura System */
  .sakura-system {
    position: absolute;
    inset: 0;
    z-index: 3;
    pointer-events: none;
  }
  
  /* Hero Logo */
  .hero-logo-container {
    margin-bottom: var(--space-4xl);
    animation: logoImperialEntrance 3s cubic-bezier(0.23, 1, 0.32, 1);
  }
  
  .hero-logo-imperial {
    position: relative;
    display: inline-block;
  }
  
  .logo-rings-system {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }
  
  .logo-ring {
    position: absolute;
    border: 2px solid;
    border-radius: 50%;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }
  
  .ring-outer {
    width: 200px;
    height: 200px;
    border-color: rgba(212, 175, 55, 0.3);
    animation: ringImperialPulse 6s ease-in-out infinite;
  }
  
  .ring-middle {
    width: 160px;
    height: 160px;
    border-color: rgba(196, 30, 58, 0.2);
    animation: ringImperialPulse 6s ease-in-out infinite 2s;
  }
  
  .ring-inner {
    width: 120px;
    height: 120px;
    border-color: rgba(0, 168, 107, 0.15);
    animation: ringImperialPulse 6s ease-in-out infinite 4s;
  }
  
  .sushi-icon-imperial {
    position: relative;
    z-index: 10;
  }
  
  .sushi-emoji {
    font-size: clamp(80px, 12vw, 140px);
    display: block;
    animation: iconImperialFloat 4s ease-in-out infinite;
    filter: drop-shadow(0 0 20px rgba(212, 175, 55, 0.5));
  }
  
  .icon-glow {
    position: absolute;
    inset: -20px;
    background: radial-gradient(circle, rgba(212, 175, 55, 0.3) 0%, transparent 70%);
    border-radius: 50%;
    animation: iconGlowPulse 3s ease-in-out infinite;
  }
  
  /* Hero Title */
  .hero-title-ultra {
    font-size: clamp(4rem, 15vw, 12rem);
    margin-bottom: var(--space-2xl);
    position: relative;
  }
  
  .title-line-main {
    display: block;
    position: relative;
  }
  
  .letter-imperial {
    display: inline-block;
    opacity: 0;
    transform: translateY(100px) rotateX(90deg) scale(0.5);
    animation: letterImperialReveal 1.2s cubic-bezier(0.23, 1, 0.32, 1) forwards;
  }
  
  /* Hero Subtitle */
  .hero-subtitle-imperial {
    margin-bottom: var(--space-3xl);
    text-align: center;
  }
  
  .japanese-main {
    display: block;
    font-size: clamp(1.5rem, 4vw, 3rem);
    margin-bottom: var(--space-sm);
    animation: fadeInUp 1.5s ease-out 1.5s both;
  }
  
  .subtitle-translation {
    display: block;
    font-size: clamp(1.2rem, 3vw, 2rem);
    color: rgba(229, 228, 226, 0.8);
    font-weight: 400;
    letter-spacing: 0.05em;
    animation: fadeInUp 1.5s ease-out 1.8s both;
  }
  
  /* Hero Description */
  .hero-description-imperial {
    font-size: clamp(1.1rem, 2.5vw, 1.4rem);
    color: rgba(229, 228, 226, 0.7);
    margin-bottom: var(--space-4xl);
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.8;
    font-weight: 300;
    letter-spacing: 0.01em;
    animation: fadeInUp 1.5s ease-out 2.1s both;
  }
  
  /* CTA System */
  .hero-cta-imperial {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
    justify-content: center;
    align-items: center;
    margin-bottom: var(--space-5xl);
    animation: fadeInUp 1.5s ease-out 2.4s both;
  }
  
  .btn-text-imperial {
    position: relative;
    z-index: 2;
  }
  
  .btn-particles-imperial {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }
  
  .particle-imperial {
    position: absolute;
    width: 6px;
    height: 6px;
    background: var(--golden-kintsugi);
    border-radius: 50%;
    opacity: 0;
  }
  
  .particle-imperial:nth-child(1) { top: 20%; left: 20%; }
  .particle-imperial:nth-child(2) { top: 20%; right: 20%; }
  .particle-imperial:nth-child(3) { bottom: 20%; left: 20%; }
  .particle-imperial:nth-child(4) { bottom: 20%; right: 20%; }
  
  .btn-imperial:hover .particle-imperial {
    animation: particleImperialBurst 0.8s ease-out;
  }
  
  /* Hero Stats */
  .hero-stats-imperial {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--space-3xl);
    animation: fadeInUp 1.5s ease-out 2.7s both;
  }
  
  .stat-item-imperial {
    text-align: center;
    position: relative;
  }
  
  .stat-number-imperial {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
    margin-bottom: var(--space-xs);
    position: relative;
  }
  
  .stat-label-imperial {
    font-size: clamp(0.8rem, 1.5vw, 1rem);
    color: rgba(229, 228, 226, 0.6);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-weight: 300;
  }
  
  .stat-decoration {
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 30px;
    height: 1px;
    background: var(--gradient-kintsugi);
    animation: expandLine 2s ease-out 3s both;
  }
  
  .stat-divider-imperial {
    width: 1px;
    height: 60px;
    background: linear-gradient(to bottom, transparent, var(--golden-kintsugi), transparent);
    opacity: 0.6;
  }
  
  /* Scroll Indicator */
  .scroll-indicator-imperial {
    position: absolute;
    bottom: var(--space-3xl);
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-sm);
    color: rgba(229, 228, 226, 0.6);
    animation: fadeInUp 1.5s ease-out 3s both;
  }
  
  .scroll-text-imperial {
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    font-weight: 300;
  }
  
  .scroll-arrow-imperial {
    animation: bounceImperial 2s infinite;
  }
  
  .scroll-line-imperial {
    width: 1px;
    height: 40px;
    background: linear-gradient(to bottom, var(--golden-kintsugi), transparent);
    position: relative;
  }
  
  .scroll-glow {
    position: absolute;
    top: -10px;
    left: -10px;
    width: 20px;
    height: 20px;
    background: radial-gradient(circle, rgba(212, 175, 55, 0.4) 0%, transparent 70%);
    border-radius: 50%;
    animation: glowPulse 2s ease-in-out infinite;
  }
  
  /* Animations */
  @keyframes logoImperialEntrance {
    0% {
      opacity: 0;
      transform: scale(0.3) rotate(-180deg);
    }
    100% {
      opacity: 1;
      transform: scale(1) rotate(0deg);
    }
  }
  
  @keyframes ringImperialPulse {
    0%, 100% { 
      transform: translate(-50%, -50%) scale(1);
      opacity: 0.3;
    }
    50% { 
      transform: translate(-50%, -50%) scale(1.15);
      opacity: 0.7;
    }
  }
  
  @keyframes iconImperialFloat {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    33% { transform: translateY(-12px) rotate(2deg); }
    66% { transform: translateY(6px) rotate(-1deg); }
  }
  
  @keyframes iconGlowPulse {
    0%, 100% { opacity: 0.3; transform: scale(1); }
    50% { opacity: 0.7; transform: scale(1.1); }
  }
  
  @keyframes letterImperialReveal {
    0% {
      opacity: 0;
      transform: translateY(100px) rotateX(90deg) scale(0.5);
    }
    100% {
      opacity: 1;
      transform: translateY(0) rotateX(0deg) scale(1);
    }
  }
  
  @keyframes particleImperialBurst {
    0% {
      opacity: 0;
      transform: scale(0);
    }
    50% {
      opacity: 1;
      transform: scale(1.5);
    }
    100% {
      opacity: 0;
      transform: scale(0) translateY(-30px);
    }
  }
  
  @keyframes bounceImperial {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-15px);
    }
    60% {
      transform: translateY(-8px);
    }
  }
  
  @keyframes glowPulse {
    0%, 100% { opacity: 0.4; transform: scale(1); }
    50% { opacity: 0.8; transform: scale(1.3); }
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(60px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* Responsive Design */
  @media (max-width: 768px) {
    .ring-outer { width: 150px; height: 150px; }
    .ring-middle { width: 120px; height: 120px; }
    .ring-inner { width: 90px; height: 90px; }
    
    .hero-stats-imperial {
      flex-direction: column;
      gap: var(--space-xl);
    }
    
    .stat-divider-imperial {
      width: 60px;
      height: 1px;
      background: linear-gradient(to right, transparent, var(--golden-kintsugi), transparent);
    }
    
    .hero-cta-imperial {
      gap: var(--space-xl);
    }
  }
  
  @media (max-width: 480px) {
    .calligraphy-char {
      font-size: clamp(60px, 12vw, 120px);
    }
    
    .hero-logo-container {
      margin-bottom: var(--space-3xl);
    }
    
    .hero-subtitle-imperial {
      margin-bottom: var(--space-2xl);
    }
    
    .hero-description-imperial {
      margin-bottom: var(--space-3xl);
    }
  }
</style>