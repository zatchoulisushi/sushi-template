---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { MapPin, Phone, Mail, Clock, Send } from 'lucide-astro';
---

<Layout>
	<Header />
	<main class="pt-16">
		<!-- Hero Section -->
		<section class="py-20 px-4 sm:px-6 lg:px-8 relative overflow-hidden">
			<div class="absolute inset-0 bg-gradient-to-br from-dark-950 via-dark-900 to-primary-950"></div>
			
			<div class="relative z-10 max-w-4xl mx-auto text-center">
				<h1 class="text-5xl sm:text-6xl font-bold mb-6 bg-gradient-to-r from-white to-primary-500 bg-clip-text text-transparent scroll-reveal">
					Nous Contacter
				</h1>
				<p class="text-xl text-white/70 max-w-2xl mx-auto scroll-reveal">
					Une question ? Une r√©servation ? N'h√©sitez pas √† nous contacter
				</p>
			</div>
		</section>
		
		<section class="py-20 px-4 sm:px-6 lg:px-8">
			<div class="max-w-6xl mx-auto">
				<div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
					<!-- Contact Info -->
					<div class="scroll-reveal">
						<h2 class="text-3xl font-bold mb-8 text-white">Informations</h2>
						
						<div class="space-y-6">
							<div class="contact-item">
								<MapPin size={24} class="text-primary-600" />
								<div>
									<h3 class="font-semibold text-white">Adresse</h3>
									<p class="text-white/70">123 Rue de la Paix<br>75001 Paris, France</p>
								</div>
							</div>
							
							<div class="contact-item">
								<Phone size={24} class="text-primary-600" />
								<div>
									<h3 class="font-semibold text-white">T√©l√©phone</h3>
									<p class="text-white/70">01 23 45 67 89</p>
								</div>
							</div>
							
							<div class="contact-item">
								<Mail size={24} class="text-primary-600" />
								<div>
									<h3 class="font-semibold text-white">Email</h3>
									<p class="text-white/70">contact@osushi.fr</p>
								</div>
							</div>
							
							<div class="contact-item">
								<Clock size={24} class="text-primary-600" />
								<div>
									<h3 class="font-semibold text-white">Horaires</h3>
									<div class="text-white/70">
										<p>Lun - Ven: 11h30 - 14h30, 18h30 - 22h30</p>
										<p>Sam - Dim: 18h30 - 23h00</p>
									</div>
								</div>
							</div>
						</div>
						
						<!-- Map placeholder -->
						<div class="mt-8 bg-white/5 backdrop-blur-sm rounded-2xl p-8 border border-white/10">
							<h3 class="text-xl font-semibold mb-4 text-white">Plan d'acc√®s</h3>
							<div class="aspect-video bg-white/10 rounded-xl flex items-center justify-center text-white/60">
								<div class="text-center">
									<MapPin size={48} class="mx-auto mb-2" />
									<p>Carte interactive Google Maps</p>
									<p class="text-sm">(Int√©gration disponible avec API)</p>
								</div>
							</div>
						</div>
					</div>
					
					<!-- Contact Form -->
					<div class="scroll-reveal">
						<form id="contact-form" class="bg-white/5 backdrop-blur-sm rounded-2xl p-8 border border-white/10">
							<h2 class="text-3xl font-bold mb-8 text-white">Envoyez-nous un message</h2>
							
							<div class="space-y-6">
								<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
									<div>
										<label class="block text-sm font-medium text-white/80 mb-2">Nom *</label>
										<input type="text" required class="form-input" placeholder="Votre nom">
									</div>
									<div>
										<label class="block text-sm font-medium text-white/80 mb-2">Email *</label>
										<input type="email" required class="form-input" placeholder="votre@email.com">
									</div>
								</div>
								
								<div>
									<label class="block text-sm font-medium text-white/80 mb-2">Sujet</label>
									<select class="form-input">
										<option value="">Choisissez un sujet</option>
										<option value="reservation">R√©servation</option>
										<option value="commande">Question sur une commande</option>
										<option value="feedback">Avis / Suggestion</option>
										<option value="autre">Autre</option>
									</select>
								</div>
								
								<div>
									<label class="block text-sm font-medium text-white/80 mb-2">Message *</label>
									<textarea required class="form-input h-32 resize-none" placeholder="Votre message..."></textarea>
								</div>
								
								<button type="submit" class="w-full btn-primary-large flex items-center justify-center space-x-2">
									<Send size={20} />
									<span>Envoyer le message</span>
								</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</section>
	</main>
	<Footer />
</Layout>

<style>
	.contact-item {
		@apply flex items-start space-x-4 p-4 bg-white/5 rounded-xl border border-white/10 hover:bg-white/10 transition-all duration-300;
	}
	
	.form-input {
		@apply w-full px-4 py-3 bg-white/5 border border-white/20 rounded-xl text-white placeholder-white/50 focus:outline-none focus:border-primary-600 focus:bg-white/10 transition-all duration-300;
	}
	
	.btn-primary-large {
		@apply px-8 py-4 bg-gradient-to-r from-primary-600 to-primary-700 text-white font-semibold rounded-xl hover:scale-105 hover:shadow-xl transition-all duration-300;
	}
</style>

<script>
	document.getElementById('contact-form').addEventListener('submit', (e) => {
		e.preventDefault();
		
		// Show success message
		const successMessage = document.createElement('div');
		successMessage.className = 'fixed inset-0 bg-dark-950/90 flex items-center justify-center z-50';
		successMessage.innerHTML = `
			<div class="bg-white/10 backdrop-blur-sm rounded-2xl p-8 text-center max-w-md mx-4">
				<div class="text-6xl mb-4">üìß</div>
				<h3 class="text-2xl font-bold text-white mb-4">Message envoy√© !</h3>
				<p class="text-white/70 mb-6">Nous vous r√©pondrons dans les plus brefs d√©lais.</p>
				<button onclick="this.parentElement.parentElement.remove()" class="px-6 py-3 bg-primary-600 text-white rounded-xl hover:bg-primary-700 transition-colors">Fermer</button>
			</div>
		`;
		
		document.body.appendChild(successMessage);
		
		// Reset form
		e.target.reset();
	});
</script>